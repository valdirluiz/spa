<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@../../assets/material-fx-v0_3.css" xmlns="http://javafx.com/javafx/8.0.91" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.ufsc.ine.aps.views.protocolo.ViewAtendimento">
    <children>
        <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox minWidth="600.0" spacing="5.0">
                    <children>

                        <HBox alignment="TOP_RIGHT">
                            <children>
                        <Button mnemonicParsing="false" text="Cancelar" onAction="#cancelarProtocolo" />
                                <Button mnemonicParsing="false" onAction="#finalizar" prefHeight="40.0" prefWidth="165.0" text="Finalizar" textAlignment="CENTER">
                                    <styleClass>
                                        <String fx:value="button-flat" />
                                        <String fx:value="button-success" />
                                    </styleClass>
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                                </Button>
                        <Button mnemonicParsing="false" onAction="#iniciarAtendimento" prefHeight="40.0" prefWidth="165.0" text="Iniciar Atendimento" textAlignment="CENTER">
                           <styleClass>
                              <String fx:value="button-flat" />
                              <String fx:value="button-success" />
                           </styleClass>
                        </Button>
                            </children>
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </HBox>
                  <HBox prefHeight="60.0" prefWidth="580.0">
                     <children>
                        <Label text="Cliente:">
                           <HBox.margin>
                              <Insets top="15.0" />
                           </HBox.margin></Label>
                        <TextField fx:id="cliente" prefHeight="36.0" prefWidth="470.0">
                           <HBox.margin>
                              <Insets left="5.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox prefHeight="51.0" prefWidth="580.0">
                     <children>
                        <Label text="Status:">
                           <HBox.margin>
                              <Insets top="15.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="status" prefHeight="36.0" prefWidth="478.0">
                           <HBox.margin>
                              <Insets left="5.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox prefHeight="51.0" prefWidth="580.0">
                     <children>
                        <Label text="Area:">
                           <HBox.margin>
                              <Insets top="15.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="area" prefHeight="36.0" prefWidth="190.0">
                           <HBox.margin>
                              <Insets left="5.0" />
                           </HBox.margin>
                        </TextField>
                        <Label text="Categoria:">
                           <HBox.margin>
                              <Insets left="50.0" top="15.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="categoria" prefHeight="36.0" prefWidth="192.0" />
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label text="Descrição:">
                           <padding>
                              <Insets top="40.0" />
                           </padding>
                        </Label>
                        <TextArea fx:id="descricao" prefHeight="100.0" prefWidth="468.0">
                           <HBox.margin>
                              <Insets left="5.0" />
                           </HBox.margin>
                        </TextArea>
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label text="Resposta" />
                        <TextArea fx:id="resposta" prefHeight="100.0" prefWidth="470.0">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </TextArea>
                     </children>
                  </HBox>

                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>

                </VBox>
            </children>
        </StackPane>
    </children>
    <styleClass>
        <String fx:value="pane" />
        <String fx:value="content-background" />
    </styleClass>
</AnchorPane>
