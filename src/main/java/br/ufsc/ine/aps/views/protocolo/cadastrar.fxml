<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.*?>

<?import javafx.scene.control.TextArea?>
<AnchorPane stylesheets="@../../assets/material-fx-v0_3.css" xmlns="http://javafx.com/javafx/8.0.91" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.ufsc.ine.aps.views.protocolo.ViewProtocolo">
    <children>
        <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox minWidth="600.0" spacing="5.0">
                    <children>

                        <Label prefHeight="18.0" styleClass="control-label" text="CPF" />
                        <TextField  onKeyReleased="#completaCliente" fx:id="cpf"  />
                        <HBox alignment="TOP_RIGHT">
                            <children>
                                <Label style="-fx-text-fill: gray; -fx-font-size: 12;" text="*Informe o CPF do cliente" />
                            </children>
                        </HBox>

                        <Label prefHeight="18.0" styleClass="control-label" text="Cliente"/>
                        <TextField  fx:id="nomeCliente" disable="true"/>
                        <HBox alignment="TOP_RIGHT">
                            <children>
                                <Label style="-fx-text-fill: gray; -fx-font-size: 12;" text="*Preencha o CPF para buscar o cliente" />
                            </children>
                        </HBox>

                        <Label text="Area" styleClass="control-label" prefHeight="18.0"/>
                        <ComboBox fx:id="area" prefHeight="42.0" prefWidth="583.0" promptText="Selecione" >
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="1" />
                                    <String fx:value="2" />
                                </FXCollections>
                            </items>
                        </ComboBox>

                        <Label text="Categoria" styleClass="control-label" prefHeight="18.0" />
                        <ComboBox fx:id="categoria" prefHeight="42.0" prefWidth="583.0" promptText="Selecione" >
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="1" />
                                    <String fx:value="2" />
                                </FXCollections>
                            </items>
                        </ComboBox>

                        <Label text="Descrição" styleClass="control-label" prefHeight="18.0" />
                        <TextArea fx:id="descricao" prefRowCount="10" prefHeight="50.0" wrapText="true"/>

                        <HBox alignment="TOP_RIGHT">
                            <children>
                                <Button mnemonicParsing="false" prefHeight="34.0" prefWidth="150.0" text="Enviar Solicitação" textAlignment="CENTER">
                                    <styleClass>
                                        <String fx:value="button-flat" />
                                        <String fx:value="button-success" />
                                    </styleClass>
                                </Button>
                            </children>
                            <VBox.margin>
                                <Insets top="50.0" />
                            </VBox.margin>
                        </HBox>

                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>

                </VBox>
            </children>
        </StackPane>
    </children>
    <styleClass>
        <String fx:value="pane" />
        <String fx:value="content-background" />
    </styleClass>
</AnchorPane>